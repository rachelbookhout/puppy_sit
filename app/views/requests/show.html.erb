<div class = "ad">
<h1><%= @request.dog_name %></h1>
<img src = "<%= @request.photo%>">
<h5> Requested by <%= link_to @request.requester.first_name,user_path(@request.requester.id)%></h5>
<h5>Start Time: <%=@request.start_time%> - End Time: <%= @request.end_time%></h5>

<h5> Address: <%=@request.address%>- Pay <%=@request.pay%></h5>
<h3><%= @request.title%></h3>
<h4><%= @request.body%></h4>
</div>


<%= simple_form_for [@request,@comment] do |f| %>
<%= f.input :body, label: "Questions?" %>
<%= f.button :submit %>
<%end%>
<% if @request.responses == [] || @request.responses.first.chosen != true %>
<%= form_for [@request,@response] do |f| %>
<%= f.submit "I Want to Help!"%>
<%end%>
<%end%>

<h2>Comments </h2>
<ul>
<%@comments.each do |comment| %>
  <li><img src= "<%= comment.user.profile_photo%>" width = "70px" height = "70px"><%= comment.body%> </li>
  <%end%>
  </ul>
<%=link_to "Go Back", requests_path %>
