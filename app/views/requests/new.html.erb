<h1> Tell us about your Request </h1>
<%= form_for @request do |f| %>

 <% if @request.errors.any? %>
    <p><%= "#{@request.errors.count} error(s) prevented your request from being saved:"%></p>
    <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<%= f.label :dog_name %>
<%= f.text_field :dog_name, required: true %>

<%= f.label :photo %>
<%= f.file_field :photo %>

<%= f.label :start_time%>
<%= f.datetime_field :start_time, required: true%>

<%= f.label :end_time%>
<%= f.datetime_field :end_time, required:true%>

<%= f.label :pay %>
<%= f.text_field :pay, required:true%>

<%= check_box_tag(:hourly) %>
<%= label_tag(:hourly,"per hour")%>

<%= check_box_tag(:weekly)%>
<%= label_tag(:weekly,"per week")%>

<%= check_box_tag(:visit) %>
<%= label_tag(:visit, "per visit")%>

<%= f.label :address %>
<%= f.text_field :address, required: true %>

<%= f.label :title %>
 <%= f.text_field :title, required: true %>

<%= f.label :body %>
<%= f.text_field :body, required: true%>


<%= f.submit 'Submit'%>
<% end %>

<%= link_to 'Back', root_url %>
</div>
